{
  "manifest_version": 2,
  "name": "Reddit Extension",
  "version": "0.1",
  
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  
"permissions": [
   "activeTab"
   ]

"content_scripts": [
  {
    "matches": [
      "https://reddit.com/r/EarthPorn/*", "http://reddit.com/r/EarthPorn/*"
    ],
    "js": ["content.js"]
    
  }
  
]
}